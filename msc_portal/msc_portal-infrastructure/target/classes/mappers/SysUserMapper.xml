<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.msc.fix.lisa.repository.db.mapper.SysUserMapper">

    <resultMap id="BaseResultMap" type="com.msc.fix.lisa.domain.entity.system.SysUser">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="account" property="account" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="nickName" property="nickName" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="create_user" property="createUser" jdbcType="VARCHAR"/>
        <result column="update_user" property="updateUser" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="enabled" property="enabled" jdbcType="BOOLEAN"/>
        <result column="yn" property="yn" jdbcType="INTEGER"/>

    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,account,password,username,nick_name,email,phone,status
        ,create_user,update_user,create_time,update_time,yn
    </sql>

    <select id="selectUser" resultType="com.msc.fix.lisa.domain.entity.system.SysUser">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE
        username = #{username}
        and
        yn = 1
    </select>

    <select id="listPage" resultType="com.msc.fix.lisa.dto.system.SysUserQry">
        select
        <include refid="Base_Column_List"/>
        from sys_user where yn = 1
    </select>
</mapper>
